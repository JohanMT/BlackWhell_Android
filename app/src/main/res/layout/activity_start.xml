<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ru.blackwhell.app.StartActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bluetooth_button_on"
        android:id="@+id/BluetoothButton"
        android:layout_marginTop="188dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/setting"
        android:id="@+id/SettingButton"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/BluetoothButton"
        android:layout_alignLeft="@+id/BluetoothButton"
        android:layout_alignStart="@+id/BluetoothButton"
        android:layout_alignRight="@+id/BluetoothButton"
        android:layout_alignEnd="@+id/BluetoothButton" />
</RelativeLayout>
